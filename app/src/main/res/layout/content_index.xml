<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.l4d.maye.IndexActivity"
    android:background="@color/dropArka"
    tools:showIn="@layout/app_bar_index">

    <HorizontalScrollView
        android:id="@+id/process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/progressbg">

        <LinearLayout
            android:id="@+id/processBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/aciklama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/process"
        android:background="@color/aciklamabg"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/kareyesil"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="1"
                android:textColor="@color/beyaz" />

            <TextView
                android:id="@+id/indexBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/karelaci"
                android:padding="5dp"
                android:text="Html Etiketi"
                android:textColor="@color/beyaz" />
        </LinearLayout>

        <TextView
            android:id="@+id/indexIcerik"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:textColor="@color/beyaz"
            android:layout_height="wrap_content"
            android:text="@string/lorem"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/karegri"
                android:text="Åžimdi Deneyelim!"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tags"
        android:gravity="center"
        android:layout_below="@+id/aciklama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/bgcolor"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tags2"
        android:gravity="center"
        android:layout_below="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/bgcolor"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dropUst"
        android:orientation="horizontal"
        android:layout_below="@+id/tags2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/dropUst" />



    <LinearLayout
        android:id="@+id/drop"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dropUst"
        android:layout_marginTop="10dp"
        android:background="@color/dropArka">
    </LinearLayout>

</RelativeLayout>
