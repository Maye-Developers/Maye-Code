<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.l4d.maye.KayitActivity"
    tools:showIn="@layout/activity_kayit">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/logo"
                android:contentDescription="@string/logo" />

            <EditText
                android:id="@+id/txtMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbox"
                android:hint="Mail"
                android:paddingLeft="10dp"
                android:textColor="@color/beyaz"
                android:textColorHint="@color/textcolor" />

            <EditText
                android:id="@+id/txtKullanici"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:hint="Kullanıcı Adı"
                android:paddingLeft="10dp"
                android:textColor="@color/beyaz"
                android:textColorHint="@color/textcolor" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/txtSifre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:hint="Şifre"
                android:paddingLeft="10dp"
                android:textColor="@color/beyaz"
                android:textColorHint="@color/textcolor" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/txtSifreTekrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox"
                android:hint="Şifre Tekrar"
                android:paddingLeft="10dp"
                android:textColor="@color/beyaz"
                android:textColorHint="@color/textcolor" />

            <Button
                android:id="@+id/btnKayit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_btn"
                android:text="Kayıt ol"
                android:textColor="@color/beyaz" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
